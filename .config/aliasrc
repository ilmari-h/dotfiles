#!/bin/sh

# Aliases
alias {vim,v,vi}="nvim"
alias r="ranger"
alias yays="fzf-aur"
alias lm="ls -t -1"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -iv"
alias g="git"
alias mount-android="jmtpfs /mnt/android"
alias dus="du -s -h"
alias mktex="cp $HOME/.config/latex-template/template.tex ./"
alias disk-usage="ncdu"
alias sshpi="ssh pi@192.168.1.4"
alias yay="paru"
alias sudoedit="doasedit"
alias md2pdf="pandoc -V geometry:margin=1in -o output.pdf $1"
alias fzf-Qi='yay -Qi $( yay -Qi | grep "Name * :" | awk "{print \$3, \$4, \$5}" | fzf )'
alias eva="eva --fix 2"

# git
alias g="git"
alias gaa="git add --all"
alias gc="git commit"
alias gs="git status"
alias gss="git status -s"
